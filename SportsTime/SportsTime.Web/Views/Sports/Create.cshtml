                                    <!--begin::Input group-->
                                    <div class="fv-row mb-10">
                                        <!--end::Label-->
                                        <div><label class="form-label">الوصف</label></div>
                                        <!--end::Label-->
                                        <!--begin::Input-->
                                        <textarea asp-for="Description" class="form-control form-control-lg form-control-solid" rows="3"></textarea>
                                        <!--end::Input-->
                                    </div>
                                    <!--end::Input group-->
                                    <!--begin::Input group-->
                                    <div class="rtl fv-row">
                                        <!--begin::Label-->
