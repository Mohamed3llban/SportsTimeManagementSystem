<script>
    document.addEventListener("DOMContentLoaded", function () {
        hideSubscribtionCost();
        $("#soloRadio").prop("checked", true);
        $("span[role='combobox']").attr("dir", "rtl");
    });

    function hideSubscribtionCost() {
        if (document.getElementById("SubscribtionCost").type == "password") { document.getElementById("SubscribtionCost").type = "number"; }
        else { document.getElementById("SubscribtionCost").type = "password" }
    }
</script>