<script>

    document.addEventListener("DOMContentLoaded", function () {
        ReadSports();
        
        $("#maleRadio").prop("checked", true);
        $("span[role='combobox']").attr("dir", "rtl");
    });

    function checkIfCodeExists() {
        $.ajax({
            url: '/Trainees/CheckIfCodeExists?code=' + $("#Code").val(),
            type: 'GET',
            success: function (result) {
                if (result) {
                    Swal.fire({
                        text: "! هذا الكود مستخدم بالفعل",
                        showConfirmButton: false,
                        icon: 'Warning',
                    });
                }
            }
        });
    }

    function ReadTrainersBySportId() {
        $('#TrainerId').children().remove();
        $.ajax({
            type: "Get",
            url: '/DropDownList/READ_TrainersBySportId?sportId=' + $("#SportId").val(),
            success: function (result) {
                if (result != null && result != undefined) {
                    for (var i = 0; i < result.length; i++) {
                        const TrainersDDL = document.getElementById("TrainerId");
                        const option = document.createElement("option");
                        option.text = result[i].textField;
                        option.value = result[i].valueField;
                        TrainersDDL.add(option);
                    }
                }
            }
        });
    }

    function ReadSports() {
        $('#SportId').children().remove();
        $.ajax({
            type: "Get",
            url: '/DropDownList/READ_Sports',
            success: function (result) {
                if (result != null && result != undefined) {
                    for (var i = 0; i < result.length; i++) {
                        const SportsDDL = document.getElementById("SportId");
                        const option = document.createElement("option");
                        option.text = result[i].textField;
                        option.value = result[i].valueField;
                        SportsDDL.add(option);
                    }
                    ReadTrainersBySportId();
                }
            }
        });
    }

</script>