@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<!--begin::Head-->
<head>
	<title>@ViewData["Title"] - Sports Time</title>
	<meta charset="utf-8" />
	<meta name="description" content="" />
	<meta name="keywords" content="" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<meta property="og:site_name" content="Sports Time" />
	<link rel="shortcut icon" href="~/assets/media/logos/favicon.png" />
	<!--begin::Fonts(mandatory for all pages)-->
	<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@700&display=swap" rel="stylesheet">
	<!--end::Fonts-->
	<!--begin::Global Stylesheets Bundle(mandatory for all pages)-->

	<link href="~/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
	<link href="~/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
	<!--end::Global Stylesheets Bundle-->
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="app-blank app-blank">
	<!--begin::Theme mode setup on page load-->
	<script>var defaultThemeMode = "light"; var themeMode; if (document.documentElement) { if (document.documentElement.hasAttribute("data-theme-mode")) { themeMode = document.documentElement.getAttribute("data-theme-mode"); } else { if (localStorage.getItem("data-theme") !== null) { themeMode = localStorage.getItem("data-theme"); } else { themeMode = defaultThemeMode; } } if (themeMode === "system") { themeMode = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light"; } document.documentElement.setAttribute("data-theme", themeMode); }</script>
	<!--end::Theme mode setup on page load-->
	<!--begin::Root-->
	<div class="d-flex flex-column flex-root" id="kt_app_root">
		<!--begin::Authentication - Sign-in -->
		<div class="d-flex flex-column flex-lg-row flex-column-fluid">
			<!--begin::Logo-->
			<a href="@Url.ActionLink("Index","Home")" class="d-block d-lg-none mx-auto py-20">
				<img alt="Logo" src="~/assets/media/logos/logo-w.png" class="theme-light-show h-100px" />
				<img alt="Logo" src="~/assets/media/logos/logo-w.png" class="theme-dark-show h-100px" />
			</a>
			<!--end::Logo-->
			<!--begin::Aside-->
			<div class="d-flex flex-column flex-column-fluid flex-center w-lg-50 p-10">
				<!--begin::Wrapper-->
				<div id="sign-up-form" class="rtl d-flex flex-column-fluid flex-column w-100 mw-450px">
					<!--begin::Header-->
					<div class="d-flex flex-stack py-2">
						<!--begin::Sign Up link-->
						<div class="rtl">
							<span class="text-gray-800 fw-bold fs-5 me-2" data-kt-translate="sign-in-head-desc">عضو جديد؟</span>
							<a class="link-primary fw-bold fs-5" asp-area="Identity" data-kt-translate="sign-in-head-link" asp-page="/Account/Register">إنشاء حساب</a>
						</div>
						<!--end::Sign Up link=-->

					</div>
					<!--end::Header-->
					<!--begin::Body-->
					<div>
						<!--begin::Form-->
						<form class="form w-100" id="account" method="post" novalidate="novalidate">
							<!--begin::Body-->
							<div class="card-body">
								<!--begin::Heading-->
								<div class="text-start mb-10">
									<!--begin::Title-->
									<h1 class="text-dark mb-3 fs-3x" style="text-align: right;" data-kt-translate="sign-in-title">تسجيل دخول</h1>
									<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
									<!--end::Title-->
								</div>
								<!--begin::Heading-->
								<!--begin::Input group=-->
								<div class="fv-row mb-8">
									<!--begin::Email-->
									<input asp-for="Input.Email" type="text" placeholder="البريد الالكتروني" autocomplete="username" aria-required="true" data-kt-translate="sign-in-input-email" class="form-control form-control-solid" />
									<span asp-validation-for="Input.Email" class="text-danger"></span>
									<!--end::Email-->
								</div>
								<!--end::Input group=-->
								<div class="fv-row mb-7">
									<!--begin::Password-->
									<input type="password" placeholder="كلمة المرور" aria-required="true" asp-for="Input.Password"
										   autocomplete="current-password" data-kt-translate="sign-in-input-password" class="form-control form-control-solid" />
									<span asp-validation-for="Input.Password" class="text-danger"></span>
									<!--end::Password-->
								</div>
								<div class="fv-row mb-7">
									<!--begin::RememberMe-->
									<label asp-for="Input.RememberMe" class="form-label">
										<input class="form-check-input" asp-for="Input.RememberMe" />
										@Html.DisplayNameFor(m => m.Input.RememberMe)
									</label>
									<!--end::RememberMe-->
								</div>
								<!--end::Input group=-->
								<!--begin::Wrapper-->
								<div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-10">
									<div></div>
									<!--begin::Link-->
									<a id="forgot-password" asp-page="./ForgotPassword" class="link-primary" data-kt-translate="sign-in-forgot-password">نسيت كلمة المرور؟</a>
									<!--end::Link-->
								</div>
								<!--end::Wrapper-->
								<!--begin::Actions-->
								<div class="d-flex flex-stack">
									<!--begin::Submit-->
									<button id="login-submit" class="btn btn-primary me-2 flex-shrink-0">
										<!--begin::Indicator label-->
										<span class="indicator-label" data-kt-translate="sign-in-submit">تسجيل</span>
										<!--end::Indicator label-->
										<!--begin::Indicator progress-->
										<span class="indicator-progress">
											<span data-kt-translate="general-progress">برجاء الإنتظار ...</span>
											<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
										</span>
										<!--end::Indicator progress-->
									</button>
									<!--end::Submit-->
									<!--begin::Footer-->
									<div class="m-0">
										<!--begin::Toggle-->
										<button class="btn btn-flex btn-link rotate" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-start" data-kt-menu-offset="0px, 0px">
											<img data-kt-element="current-lang-flag" class="w-25px h-25px rounded-circle me-3" src="~/assets/media/flags/saudi-arabia.svg" alt="" />
											<span data-kt-element="current-lang-name" style="margin-left: 10px;" class="me-2">العربية</span>
											<!--begin::Svg Icon | path: icons/duotune/arrows/arr072.svg-->
											<span class="svg-icon svg-icon-3 svg-icon-muted rotate-180 m-0">
												<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
													<path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="currentColor" />
												</svg>
											</span>
											<!--end::Svg Icon-->
										</button>
										<!--end::Toggle-->
										<!--begin::Menu-->
										<div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px py-4" data-kt-menu="true" id="kt_auth_lang_menu">
											<!--begin::Menu item-->
											<div class="menu-item px-3">
												<a href="#" class="menu-link d-flex px-5" data-kt-lang="Arabic">
													<span class="symbol symbol-20px me-4">
														<img data-kt-element="lang-flag" class="rounded-1" style="margin-left: 10px;" src="~/assets/media/flags/saudi-arabia.svg" alt="" />
													</span>
													<span data-kt-element="lang-name">العربية</span>
												</a>
											</div>
											<!--end::Menu item-->
											<!--begin::Menu item-->
											<div class="menu-item px-3">
												<a href="#" class="menu-link d-flex px-5" data-kt-lang="English">
													<span class="symbol symbol-20px me-4">
														<img data-kt-element="lang-flag" class="rounded-1" style="margin-left: 10px;" src="~/assets/media/flags/united-states.svg" alt="" />
													</span>
													<span data-kt-element="lang-name">English</span>
												</a>
											</div>
											<!--end::Menu item-->
										</div>
										<!--end::Menu-->
									</div>
									<!--end::Footer-->
								</div>
								<!--end::Actions-->

							</div>
							<!--begin::Body-->
						</form>
						<!--end::Form-->
					</div>
					<!--end::Body-->

				</div>
				<!--end::Wrapper-->
			</div>
			<!--end::Aside-->
			<!--begin::Body-->
			<div id="login-bg" class="d-none d-lg-flex flex-lg-row-fluid w-50 bgi-size-cover bgi-position-y-center bgi-position-x-start bgi-no-repeat"></div>
			<!--begin::Body-->
		</div>
		<!--end::Authentication - Sign-in-->
	</div>
	<!--end::Root-->
	<!--begin::Javascript-->
	<script>var hostUrl = "~/assets/";</script>
	<!--begin::Global Javascript Bundle(mandatory for all pages)-->
	<script src="~/assets/plugins/global/plugins.bundle.js"></script>
	<script src="~/assets/js/scripts.bundle.js"></script>
	<!--end::Global Javascript Bundle-->
	<!--begin::Custom Javascript(used for this page only)-->
	<script src="~/assets/js/custom/authentication/sign-in/general.js"></script>
	<script src="~/assets/js/custom/authentication/sign-in/i18n.js"></script>
	@section Scripts {
		<partial name="_ValidationScriptsPartial" />
	}
	<!--end::Custom Javascript-->
	<!--end::Javascript-->
</body>
<!--end::Body-->
</html>